<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <View
        android:id="@+id/dialog_view_date_picker_v_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/jianbian"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_view_date_picker_tv_cancel"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="取消"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_view_date_picker_tv_confrim"
                android:text="确定"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>


        <View
            android:background="#2666"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <FrameLayout
            android:id="@+id/dialog_view_date_picker_fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="16dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.dapi.suse.wheelpickerview.pickerview.LoopView
                    android:id="@+id/dialog_view_date_picker_lv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="年"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dapi.suse.wheelpickerview.pickerview.LoopView
                    android:id="@+id/dialog_view_date_picker_lv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:text="月"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </FrameLayout>



    </LinearLayout>



</LinearLayout>